<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DatosPecesCompletosActivity"
    android:background="#FFC90E"
    android:padding="10dp">

    <ScrollView
        android:id="@+id/scrollPeces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/llmPeces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tipoAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/peces"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginLeft="80dp"/>

            <ImageView
                android:id="@+id/iconoPeces"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/iconopeces"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-47dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvNomP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.133"
                android:background="@drawable/bordes"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.238">

                <ImageView
                    android:id="@+id/imgAnimalP"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imgContinenteP"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvClaseP"
                android:layout_width="310dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.434"
                android:background="@drawable/bordes"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvPesoAdultoP"
                android:layout_width="310dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.569"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvLongitudAdultoP"
                android:layout_width="310dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="45dp"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvPromedioVidaP"
                android:layout_width="310dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.64"
                tools:layout_editor_absoluteX="10dp"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvAlimentacionP"
                android:layout_width="310dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.745"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvPeligrosoP"
                android:layout_width="310dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.821"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvDondeViveP"
                android:layout_width="310dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.934"
                android:paddingLeft="5dp"/>

            <TextView
                android:id="@+id/tvContinenteP"
                android:layout_width="310dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                android:background="@drawable/bordes"
                android:paddingLeft="5dp"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>